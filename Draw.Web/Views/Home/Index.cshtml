@{
    ViewData["Title"] = "Home Page";
}
@model TitleListViewModel
@{
    Model.MainTitles.ForEach((mt) =>
    {
        mt.BaseTitles.ForEach((bt) =>
        {
            bt.SubTitles = bt.SubTitles.OrderBy(x => x.Id).ToList();
        });
    });
}

<header>
    <div class="container-fluid mt-5" style="height:750px">
        <div class="jumbotron text-white h-100 w-100 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row w-100 align-items-center">
                    <div class="col-md-8 ">
                        <div style="width:100%;height:100%;">
                            <iframe style="width:100%;" height="500" src="https://www.youtube.com/embed/kdz4b9l1CcQ?autoplay=1&mute=1" title="CAD Yazılımı | Python" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>

                        </div>
                    
                </div>
                    <div class="col-md-4">
                    <h1 >DrawCAD</h1>
                     <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary btn-lg">İndir</button>
                        <button type="button" class="btn btn-secondary btn-lg me-0 ms-0 pe-0 ps-0" disabled></button>
                        <button type="button" class="btn btn-secondary btn-lg" >.exe</button>
                    </div>
                    <p class="mt-3" style="font-size:12px;width:250px;">Not:Test etmek için indirilebilir.Henüz geliştirme aşamasında kaydettiğiniz veriler kaybolabilir.</p>
                </div>
            </div>
        </div>
    </div>
    </div>
</header>

<body>
    <div class="row ms-2 me-2">

        <div class="col-md-2">
            <div class="sticky-top">
                    @await Html.PartialAsync("_HomeTitle",Model)

            </div>
            
            
        </div>
        
        <div class="col-md-8">
            <div >
                @await Html.PartialAsync("_HomeMain",Model)
            </div>
        </div>
        <div class="col-md-2">
            <div class="sticky-top">
                 @await Html.PartialAsync("_HomeRight",Model)

             </div>
        </div>



    </div>

</body>


<script type="module" src="~/js/home.js" asp-append-version="true"></script>


